{
  "title": "Node.js Metrics",
  "panels": [
    {
      "id": 1,
      "title": "Memory Usage Bytes",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
      "targets": [
        {
          "expr": "nodejs_memory_usage_bytes",
          "legendFormat": "Memory Used"
        },
        {
          "expr": "container_memory_limit_bytes",
          "legendFormat": "Memory Limit"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "bytes",
          "min": 0
        }
      }
    },
    {
      "id": 2,
      "title": "Memory Usage %",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
      "targets": [
        {
          "expr": "nodejs_memory_usage_percent",
          "legendFormat": "Memory %"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100
        }
      }
    },
    {
      "id": 3,
      "title": "HTTP Requests Rate",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 24, "x": 0, "y": 8},
      "targets": [
        {
          "expr": "rate(http_requests_total[5m])",
          "legendFormat": "Requests/sec"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "min": 0
        }
      }
    }
  ]
}